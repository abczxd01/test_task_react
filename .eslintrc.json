{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "settings": {
    "import/extensions": [".js", ".jsx"]
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "no-plusplus": "off",
    "react/jsx-closing-bracket-location": [1, "after-props"],
    "import/no-default-export": 2,
    "import/prefer-default-export": 0
  }
}
